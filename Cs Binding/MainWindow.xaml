<Window x:Class="Cs_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cs_Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="53,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
            Text="{Binding Path=ThePerson.PersonName}"
                   />
        <Button x:Name="ChangeButton" Content="Change" HorizontalAlignment="Left" Margin="192,64,0,0" VerticalAlignment="Top" Width="75" Click="ChangeButtonClick"/>

    </Grid>
</Window>
